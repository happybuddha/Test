INSERT INTO `sys_template` VALUES ('SPREAD_THE_WORD_CODE', 'Email Template for Spread the word', '<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">\r\n\r\n<html xmlns="http://www.w3.org/1999/xhtml">\r\n<head>		\r\n	<title>FiftyP</title>\r\n</head>\r\n<body class="yui-skin-sam" >\r\n			<table cellpadding="0" cellspacing="0">\r\n				<tr>\r\n					<td> <img src ="logo_parent.gif" /></td>\r\n				</tr>\r\n				<tr>\r\n					<td nowrap="nowrap"><font color="#F68B1F" size="2" style="font-size:14px;" face="verdana"><b>${userName} has sent you an ecard from FiftyP </b></font></td>\r\n				</tr>\r\n				<tr>			\r\n				<tr>\r\n					<td align="center" style="padding:15px 0px 15px 0px;">\r\n					<div style="background-image:url(''card.jpg'');width:613px;height:382px">\r\n					<table border="0" align="center" width="98%" height="375">\r\n						<tr>\r\n							<td style="padding:30px; width:200px" valign="top">\r\n							<p style="color:#77823B"><b>From ${userName},</b>\r\n							<br />${userName}@fiftyp.com \r\n							<p>${userName} wanted to tell you about Fiftyp.com, a place where your kids learn financial and social skills that will positively shape their future.</p>\r\n							<p>Come check us out at</p>\r\n\r\n							<p><a target="_blank" href="http://www.fiftyp.com" style="color:#000000">www.fiftyp.com</a></p>\r\n\r\n							</td>\r\n							<td style="padding:92px 0px 0px 31px;" valign="top" align="left">\r\n							<div style="color:#7B2B83;padding:0px 0px 10px 5px;"><b>${topicTitle}</b></div>\r\n							<div><img id="topicImg" src="${imageName}" /></div>\r\n							</td>\r\n						</tr>\r\n					</table>\r\n					</div>\r\n					</td>\r\n				</tr>\r\n				<tr>\r\n				<td><p>${customMsg}</p></td>\r\n</table>\r\n</body>\r\n</html>\r\n', 'has sent you an ecard from FiftyP');

